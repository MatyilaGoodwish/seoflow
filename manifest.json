{
    "name": "SEO Flow",
    "description": "Ultimate toolkit for SEO Enthusiasts and Content managers",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [ "<all_urls>" ],
    "action": {
        "default_title": "Analyse SEO on this page",
        "default_icon": "images/icon.png"
    },
    "icons": {
        "16": "images/icon.png",
        "32": "images/icon.png",
        "48": "images/icon.png",
        "64": "images/icon.png",
        "128": "images/icon.png"
    }
}